<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |form| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <div class='alert alert-danger'><%= msg %></div>
    <% end %>
  <% end %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :body %>
  <%= form.text_field :body %>
  <%= form.submit 'Submit' %>
<% end %>
