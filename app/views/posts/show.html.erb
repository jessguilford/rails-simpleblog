<h3 class='post__title'><%= @post.title %></h3>
<p><%= @post.body %></p>

<hr>
<%= link_to 'Edit post', edit_post_path(@post), :class => 'btn btn-light'%>
<%= link_to 'Delete post', post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, :class => 'btn btn-light'%>
<%= link_to 'Home', root_path%>
<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong><%= comment.username %></strong></p>
    <p><%= comment.body %></p>
  </div>
<% end %>

<h4>Add Comment</h4>
<%= form_for([@post, @post.comments.build]) do |form| %>
  <p>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </p>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit 'Leave comment' %>
  </p>
<% end %>
