<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong><%= comment.username %></strong></p>
    <p><%= comment.body %></p>
    <%= link_to 'Delete comment', [comment.post, comment],
                                    method: :delete, 
                                    data: { confirm: 'Are you sure you want to delete this comment?' } %>
  </div>
<% end %>
